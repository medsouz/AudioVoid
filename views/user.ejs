<% layout('layout') -%>
<div class="mdl-grid">
	<div class="mdl-cell mdl-cell--4-col mdl-color--white mdl-color-text--black">
		<!--<span class="demo-card-image__filename">Name(UserName)<br>City,State</span>
			<img src=/img/demoprofilepic.jpg style="width: 256px; height: 204px; float:right">-->
		<div class="mdl-card mdl-shadow--2dp mdl-color-text--grey-100" style="background: url('/img/demoprofilepic.jpg') no-repeat center; height: 300px; width: 100%">
			<div class="mdl-card__title mdl-card--expand"></div>
			<div class="mdl-card__actions" style="background-color: rgba(0, 0, 0, 0.5)">
				<% if (req.user && req.user.id != user.id) { /* Only show follow button if logged in and not on your own profile */ %>
					<button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-color-text--grey-100" style="float:right">Follow</button>
				<% } %>
				<b><%= user.username %></b>
				<br>
				<span>City, State</span>
			</div>
		</div>
	</div>
	<div class="mdl-cell mdl-cell--4-col mdl-color--white mdl-color-text--black">
		<h3 style="text-align: center">Bio</h3>
	</div>
	<div class="mdl-cell mdl-cell--4-col mdl-color--white mdl-color-text--black">
		<h3 style="text-align: center">Photo gallery</h3>
	</div>
	<div class="mdl-cell mdl-cell--4-col mdl-color--white mdl-color-text--black scroll" style="height:300px">
		<h3 style="text-align: center">Reposts</h3>
	</div>
	<div class="mdl-cell mdl-cell--4-col mdl-color--white mdl-color-text--black scroll" style="height:300px">
		<h3 style="text-align: center">Posts</h3>
	</div>
	<div class="mdl-cell mdl-cell--4-col mdl-color--white mdl-color-text--black scroll" style="height:300px">
		<div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
			<div class="mdl-tabs__tab-bar">
				<a href="#followers-panel" class="mdl-tabs__tab is-active">Followers </a>
				<a href="#following-panel" class="mdl-tabs__tab">Following</a>
			</div>
			<div class="mdl-tabs__panel is-active" id="followers-panel">
				<ul>
					<li>follower1</li>
					<li>follower2</li>
					<li>follower3</li>
					<li>follower4</li>
				</ul>
			</div>
			<div class="mdl-tabs__panel" id="following-panel">
				<ul>
					<li>following1</li>
					<li>following2</li>
					<li>following3</li>
					<li>following4</li>
				</ul>
			</div>
		</div>
	</div>
</div>
