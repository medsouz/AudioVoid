<% layout('layout') -%>
<div class="mdl-grid">
	<div class="mdl-cell mdl-cell--6-col">
		<%
		for(var s in songs) {
			var song = songs[s];
			var user = users[song.UserId];
		%>
			<div class="mdl-cell mdl-cell--12-col mdl-color--white mdl-color-text--black-100 mdl-shadow--2dp">
				<div class="mdl-grid">
					<div class="mdl-cell mdl-cell--2-col center">
						<img src="<%= getGravatar(user.email) %>" style="width: 100%;">
					</div>
					<div class="mdl-cell mdl-cell--10-col">
						<%- include templates/songs %>
					</div>
				</div>
			</div>
		<% } %>
	</div>
	<div class="mdl-cell mdl-cell--6-col">
		<%
		for(var p in posts) {
			var post = posts[p];
			var user = users[post.UserId];
		%>
			<%- include templates/posts %>
		<% } %>
	</div>
</div>
