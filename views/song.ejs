<% layout('layout') -%>
<form action="/song/upload" method="post" enctype="multipart/form-data">

	<div class="mdl-grid">
		<%
			var messages = req.flash("error");
			if (messages.length > 0){
		%>
			<div class="mdl-cell mdl-cell--12-col mdl-color--white mdl-color-text--black login-header">
				<% for(msg in messages) { %>
				<h3><%= messages[msg] %><h3>
				<% } %>
			</div>
		<% } %>
		<div class="mdl-cell mdl-cell--4-col mdl-color--white mdl-color-text--black login-header" style="margin-left: auto; margin-right: auto; margin-left: auto; margin-right: auto; padding-top: 2px; bottom-padding: 0px;">
			<b>Upload and share your music</b>
			<br>
			<div class="mdl-cell mdl-cell--4-col center">
				<i class="material-icons center" style="font-size: 1000%;">album</i>
			</div>
			<input class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect mdl-color--red-600" type="file" name="songfile" value="upload" accept="audio/mp3"></input>
		</div>
		<div class="mdl-cell mdl-cell--4-col mdl-color--white mdl-color-text--black login-header" style="margin-left: auto; margin-right: auto; margin-left: auto; margin-right: auto; padding-top: 2px;">
			<b>Upload song image</b>
			<br>
			<div class="mdl-cell mdl-cell--4-col center">
				<i class="material-icons center" style="font-size: 1000%;">add_a_photo</i>
			</div>
			<input class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect mdl-color--red-600" type="file" name="coverfile" value="upload" accept="image/png"></input>
		</div>
		<div class="mdl-cell mdl-cell--4-col mdl-color--white mdl-color-text--black login-header" style="margin-left: auto; margin-right: auto; margin-left: auto; margin-right: auto; padding-top: 2px; padding-bottom: 0px;">
			<b>Song info</b>
			<div class="mdl-cell mdl-cell--4-col">

				<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="padding-bottom: 0px;">
					<input class="mdl-textfield__input" type="text" name="SongTitle">
					<label class="mdl-textfield__label" for="SongTitle">
						<b>Title</b>
					</label>
				</div>
				<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="padding-bottom: 0px;">
					<input class="mdl-textfield__input" type="text" name="SongGenre">
					<label class="mdl-textfield__label" for="SongGenre">
						<b>Genre</b>
					</label>
				</div>
				<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="padding-bottom: 0px;">
					<input class="mdl-textfield__input" type="text" name="SongDescription">
					<label class="mdl-textfield__label" for="SongDescription">
						<b>Description</b>
					</label>
				</div>

				<div class="mdl-cell mdl-cell--2-col">
					<table>
						<tr>
							<td>
								<button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect mdl-color--grey-600" type="Cancel" value="Cancel">Cancel</button>
							</td>
							<td>
								<button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect mdl-color--red-600" type="Submit" value="Submit">Submit</button>
							</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
</form>
